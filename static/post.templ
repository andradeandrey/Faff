    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />

      <title>{Post.Title}</title>
      <meta name="description" content="{Post.Title}">
      <meta name="author" content="{Page.Author}">

    <meta property="og:title" content="{Post.Title} by {Page.Author}" />
      <meta property="og:type" content="non_profit" />
      <meta property="og:url" content="http://{Page.RootURL}{Post.URL}" />
      <meta property="og:image" content="http://{Page.RootURL}/s/img/logo.jpg" />
      <meta property="og:site_name" content="{Page.Author}" />
      <meta property="fb:admins" content="{Page.FacebookAdminID}" />

      <!-- favicon 16x16 -->
      <link rel="shortcut icon" href="/s/favicon.ico">
      <!-- apple touch icon 57x57 -->
      <link rel="apple-touch-icon" href="/s/apple-touch-icon.png">

      <link rel="stylesheet" href="/s/css/scren.css?v=1.0">
      <link rel="stylesheet" href="/s/css/main.css?v=1.0">
    </head>

    <body class="home">


      <div id="header">
      <a href="http://{Page.RootURL}">{Page.TitleHTML}</a>
      <h3>{Page.SubTitle}</h3>
      </div>

      <div id="main" class="post">

	    <div id="sidebar">
	      <div id="logo"></div>
	      <div id="logotext">Â¡Mi avatar!</div>

	    <div id="twfb">
	      <!-- twitter -->
	      <div id="tw">
		<a href="http://twitter.com/share" class="twitter-share-button" data-count="vertical"
		  data-via="{Page.AuthorTwitter}" data-related="{Post.Title} by {Page.Author}">Tweet</a><script
		  type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
	      </div>
	      <!-- facebook -->
	      <div id="fb">
		<iframe
		  src="http://www.facebook.com/plugins/like.php?href=http%3A%2F%2F{Page.RootURL}{Post.URL}&amp;layout=box_count&amp;show_faces=true&amp;width=55&amp;action=like&amp;font=lucida+grande&amp;colorscheme=dark&amp;height=65"
		  scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:55px;
		  height:65px;" allowTransparency="true"></iframe>
	      </div>
	    </div><!-- twfb -->
	    </div>

      <h2>{Post.Title}</h2>
      <div class="body">
        {Post.Body}
      </div>

      <div id="disqus_thread"></div>
      <script type="text/javascript">
        var disqus_identifier = '{Post.ID}';
        var disqus_url = 'http://{Page.RootURL}{Post.URL}';
        var disqus_title = '{Post.Title}';
        var disqus_developer = {Page.DisqusDevMode};
        var disqus_shortname = '{Page.DisqusShortname}';
      </script>
      <script type="text/javascript" src="/s/js/disqus.js"></script>

      </div><!-- #main -->

